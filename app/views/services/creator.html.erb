
<form method="POST" action="/services/insertService" accept-charset="UTF-8" role="form" id="crearservice" name="crearservice" enctype="multipart/form-data">
    
<!-- ProtecciÃ³n CSRF -->
<%= token_tag nil %>

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <div class="panel-body">

                <div class="form-group">
                    <label for="url" class="negrita">Url:</label>
                    <div>
                        <input class="form-control" placeholder="" name="url" type="text" id="url" onload="crearUrlAmigable(this.value);" onkeypress="crearUrlAmigable(this.value);" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="title" class="negrita">Title:</label>
                    <div>
                        <input class="form-control" placeholder="" name="title" type="text" id="title" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="subtitle" class="negrita">Subtitle:</label>
                    <div>
                        <input class="form-control" placeholder="" name="subtitle" type="text" id="subtitle" required>
                    </div>
                </div>

                <div class="form-group">
                <label for="description" class="negrita">Description:</label>
                    <div>
                        <input class="form-control" placeholder="" name="description" type="text" id="description" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-info">Save</button>
                <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>

                    <br>
                    <br>

            </div>
        </section>
    </div>
</div>
</form>
