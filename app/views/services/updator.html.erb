
<% @services.each do |services| %>

    <form method="POST" action="/services/trueupdate/<%= services.id %>" accept-charset="UTF-8" role="form" id="actulizarservice" name="actulizarservice" enctype="multipart/form-data">

    <!-- ProtecciÃ³n CSRF -->
    <%= token_tag nil %> 

        <div class="row" id="api">
            <div class="col-md-12">
                <section class="panel">
                    <div class="panel-body">

                        <div class="form-group">
                            <label for="tile" class="negrita">Nombre:</label>
                            <div>
                                <input class="form-control" placeholder="url" name="url" type="text" id="url" onload="crearUrlAmigable(this.value);" onkeypress="crearUrlAmigable(this.value);" value="<%= services.url %>" >
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="title" class="negrita">title:</label>
                            <div>
                                <input class="form-control" placeholder="title" name="title" type="text" id="title" value="<%= services.title %>" >
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="subtitle" class="negrita">Subtitle:</label>
                            <div>
                                <input class="form-control" placeholder="subtitle" name="subtitle" type="text" id="subtitle" value="<%= services.subtitle %>" >
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="description" class="negrita">description:</label>
                            <div>
                                <input class="form-control" placeholder="description" name="description" type="text" id="description" value="<%= services.description %>" >
                            </div>
                        </div>

                        <button type="submit" class="btn btn-info">Guardar</button>
                        <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>

                            <br>
                            <br>

                    </div>
                </section>
            </div>
        </div>
    </form>

<% end %>

