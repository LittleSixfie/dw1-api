<!-- Mensajes -->
<% if flash[:notice] %>
    <div class="alert alert-success" role="alert" id="notice" class="notice">
        <%= flash[:notice] %>                                    
    </div>
<% end %>

<table id="api" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Tags</th>
            <th>Preview</th>
            <th>Text</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |articles| %>
            <tr>
                <td class="v-align-middle">
                    <%= articles.title %>
                </td>
                <td class="v-align-middle">
                    <%= articles.subtitle %>
                </td>
                <td class="v-align-middle">
                    <%= articles.tags %>
                </td>
                <td class="v-align-middle">
                    <%= articles.preview %>
                </td>
                <td class="v-align-middle">
                    <%= articles.text %>
                </td>
                <td class="v-align-middle">
                    <img src="/assets/images/<%= articles.image %>" width="30" class="img-fluid" title="<%= articles.title %>" alt="<%= articles.title %>">
                </td>
                <td class="v-align-middle">
 
                    <form method="POST" action="/articles/eliminar/<%= articles.id %>" accept-charset="UTF-8" class="form-horizontal" role="form" onsubmit="return ConfirmDelete()">
 
                        <!-- ProtecciÃ³n CSRF -->
                        <%= token_tag nil %> 
 
                        <a href="/articles/leer/<%= articles.id %>" class="btn btn-dark">Detalles</a>
                        <a href="/articles/actualizar/<%= articles.id %>" class="btn btn-primary">Editar</a>
 
                        <button type="submit" class="btn btn-danger">Eliminar</button>
 
                    </form>
 
                </td>
            </tr>
            <% end %>
    </tbody>
</table>

<div align="left">
    <a href="crear" class="btn btn-success mt-4 ml-3">  Agregar </a>
</div>
 
